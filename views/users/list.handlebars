<table class="table table-responsive">
    <tr>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
    </tr>
    {{#each users}}
    <tr>
        <td>{{this.username}}</td>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>
            <form action="/admins/add/{{this._id}}" method="POST">
                <input type="submit" value="Make Admin" class="btn btn-default"/>
            </form>
        </td>
    </tr>
    {{/each}}
</table>